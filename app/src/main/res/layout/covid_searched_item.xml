<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <TextView
        android:id="@+id/dateData"
        android:layout_width="164dp"
        android:layout_height="30dp"
        android:text="Date goes here"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vaccinationData"
        android:layout_width="222dp"
        android:layout_height="20dp"
        android:text="Vaccinations goes here"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hospitalizationData" />

    <TextView
        android:id="@+id/fatalitiesData"
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:text="Fatalities goes here"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/caseData" />

    <TextView
        android:id="@+id/recoveryData"
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:text="Recoveries goes here"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vaccinationData" />

    <TextView
        android:id="@+id/hospitalizationData"
        android:layout_width="222dp"
        android:layout_height="20dp"
        android:text="Hospitalizations goes here"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fatalitiesData"
       />

    <TextView
        android:id="@+id/caseData"
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:text="Cases goes here"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateData" />

    <TextView
        android:id="@+id/emptyLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recoveryData" />


</androidx.constraintlayout.widget.ConstraintLayout>